library(shiny)

#Code for all the seven pages
page_one <- tabPanel(
    "Home Page",
    titlePanel("Home Page"),
    sidebarLayout(
        sidebarPanel(
            h3("Welcome to our project!"),
            p("This is our analysis of NBA analytics!")
        ),
        mainPanel(
            h2("NBA Analytics")
        )
    )
)
page_two <- tabPanel(
    "Background",
    titlePanel("Background"),
    
)
page_three <- tabPanel(
    "Viz #1",
    titlePanel("Viz #1")
)
page_four <- tabPanel(
    "Viz #2",
    titlePanel("Viz #2")
)
page_five <- tabPanel(
    "Conclusion",
    titlePanel("Conclusion")
)
page_six <- tabPanel(
    "About the Tech",
    titlePanel("Technical Report")
)
page_seven <- tabPanel(
    "About Us",
    titlePanel("About Us"),
    
)

ui <- fluidPage(
        titlePanel("NBA Analytics"),
        navlistPanel(
            page_one,
            page_two,
            navbarMenu(
                "Data Viz",
                page_three,
                page_four
            ),
            page_five,
            page_six,
            page_seven
        )
)
